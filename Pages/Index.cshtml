@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-5">Live Football World Cup Score Board</h1>

</div>




<div class="col-5"><input type="text" id="hometeamInput" value="Home Team" /></div>

<div class="col-5"><input type="text" id="gameeventInput" value="Away Team" /></div>

<div class="col-6">
    <input type="button" id="sendButton" value="Start Match" />
</div>

<div class="row p-1">
    <div class="col-6">
        <ul id="gameeventsList"></ul>
    </div>
</div>


@section Scripts{
    <script src="~/js/signalr.min.js"></script>
    <script src="~/js/signalr.js"></script>
    <script src="~/js/home.js"></script>
    <script src="~/js/index.js"></script>

}
